<style>
  .btn-search {
    display: flex;
    align-items: center;
    background-color: #fe424d;
    color: #fff;
    gap: 6px;
    border-radius: 25px;
    padding: 0.4rem 1rem;
    border: none;
  }

  .btn-search i {
    display: inline;
    font-size: 0.9rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
    min-width: 260px; /* desktop same feel */
  }

  @media (max-width: 768px) {
    .search-inp {
      min-width: 100%;
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-white border-bottom sticky-top">
  <div class="container-fluid position-relative">

    <!-- LEFT -->
    <div class="d-flex align-items-center">
      <a class="navbar-brand me-3" href="/listings">
        <i class="fa-solid fa-compass"></i>
      </a>

      <ul class="navbar-nav d-none d-md-flex">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>
    </div>

    <!-- TOGGLER (mobile) -->
    <button
      class="navbar-toggler ms-auto"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#mainNavbar"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- CENTER SEARCH (ABSOLUTE CENTER) -->
    <form
      class="d-none d-md-flex align-items-center position-absolute top-50 start-50 translate-middle"
      role="search"
    >
      <input
        class="form-control me-2 search-inp"
        type="search"
        placeholder="Search destination"
      />
      <button class="btn btn-search" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span class="d-none d-lg-inline">Search</span>
      </button>
    </form>

    <!-- RIGHT -->
    <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>

        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
        <% } %>

        <% if (currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        <% } %>
      </ul>

      <!-- MOBILE SEARCH -->
      <form class="d-flex d-md-none mt-3" role="search">
        <input class="form-control me-2 search-inp" type="search" placeholder="Search destination" />
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>

  </div>
</nav>
