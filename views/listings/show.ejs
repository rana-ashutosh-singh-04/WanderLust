<% layout("/layouts/boilerplate")-%>
    
    <div class="row mt-3 mb-3"> 
      <div class="col-8 offset-3">
        <h3>Listing Deteails </h3>
      </div>
      
     <div class="card col-6 offset-3 show-card mt-3">
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing-image">
      <div class="card-body">
        <b class="card-text"><%=listing.title%></b><br>
        <%=listing.description%><br>
         &#x20b9;<%=listing.price.toLocaleString("en-IN")%><br>
         <%=listing.location%><br>
         <%=listing.country%><br>
      </div>
    </div>
    </div>

    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark offset-3 col-1 edit-btn mt-3">Edit</a>

       <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
         <button class="btn btn-dark offset-5 mt-3">Delete </button>
       </form>
       </div>
       <br>

